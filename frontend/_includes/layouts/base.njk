<!doctype html>
<html lang="en" dir="ltr">
  <head>
    <meta charset="UTF-8" />
    <title>{{ title }}</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="description" content="Brisbane's only social chess club" />
    <link rel="stylesheet" href="{{ '/assets/tailwind.css' | url  }}" />
    <link rel="icon" href="{{ '/assets/favicon.png' | url  }}" />
    <link rel="apple-touch-icon" href="{{ '/assets/apple-touch-icon.png' | url  }}" />
    <meta name="generator" content="{{ eleventy.generator }}" />
  </head>
  <body class="flex flex-col min-h-screen font-montserrat text-white bg-[url('/assets/background.jpg')] bg-cover bg-center bg-fixed">
    <!-- Background overlay -->
    <div class="flex-grow min-h-[calc(100vh-85px)] bg-black/65 flex justify-center p-12 max-md:p-4">
      <main class="max-w-[620px] w-[calc(100%-1rem)] bg-black/55 p-4 rounded-xl shadow-[0_0_50px_rgba(0,0,0,0.6)] flex flex-col gap-6">
        
        <!-- Logo -->
        <div class="text-center">
          <a href="{{ '/' | url  }}">
            <img src="{{ '/assets/logo.jpg' | url  }}" alt="Brisbane Social Chess Logo"
                 class="w-24 mx-auto rounded-full mb-5" />
          </a>
          <h1 class="text-lg uppercase tracking-[2px] font-bold">Brisbane Social Chess</h1>
          <p class="text-sm opacity-85 mt-1">A place for casual chess, for fun and friendly people.</p>
        </div>

        <!-- Top Navigation -->
        <nav class="text-center text-sm space-x-2">
          <a href="{{ '/' | url  }}"
             class="text-gray-300 hover:text-white {% if page.url == '/' %}text-sky-400 font-bold{% endif %}">Home</a>
          <a href="{{ '/about/' | url  }}"
             class="text-gray-300 hover:text-white {% if page.url == '/about/' %}text-sky-400 font-bold{% endif %}">About</a>
          <a href="{{ '/games/' | url  }}"
             class="text-gray-300 hover:text-white {% if page.url == '/games/' %}text-sky-400 font-bold{% endif %}">Games</a>
          <a href="{{ '/meetup/' | url  }}"
             class="text-gray-300 hover:text-white {% if page.url == '/meetup/' %}text-sky-400 font-bold{% endif %}">Meetups</a>
          <a href="{{ '/minutes/' | url  }}"
             class="text-gray-300 hover:text-white {% if page.url == '/minutes/' %}text-sky-400 font-bold{% endif %}">Minutes</a>
          <a href="{{ '/register/' | url  }}"
             class="text-gray-300 hover:text-white {% if page.url == '/register/' %}text-sky-400 font-bold{% endif %}">Register</a>
          <a href="{{ '/rules/' | url  }}"
             class="text-gray-300 hover:text-white {% if page.url == '/rules/' %}text-sky-400 font-bold{% endif %}">Rules</a>
          <a href="{{ '/terms/' | url  }}"
             class="text-gray-300 hover:text-white {% if page.url == '/terms/' %}text-sky-400 font-bold{% endif %}">Terms</a>
          <a href="{{ '/contact/' | url  }}"
             class="text-gray-300 hover:text-white {% if page.url == '/contact/' %}text-sky-400 font-bold{% endif %}">Contact</a>
        </nav>

        <!-- Content -->
        {{ content | safe }}
      </main>
    </div>

    <!-- Footer -->
    <footer class="h-[85px] text-center p-8 text-sm text-white/60">
      <p>&copy; <span id="year"></span> Brisbane Social Chess. All rights reserved.</p>
    </footer>

    <script type="text/javascript" src="{{ '/assets/script.js' | url  }}"></script>
  </body>
</html>
