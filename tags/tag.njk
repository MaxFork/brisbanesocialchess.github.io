---
pagination:
  data: collections.tags
  size: 1
  alias: tag
permalink: "/tags/{{ tag | slug }}/index.html"
---

<h1>Posts tagged with: {{ tag }}</h1>

<ul>
  {% for post in collections.posts %}
    {% if post.data.tags and tag in post.data.tags %}
      <li><a href="{{ post.url }}">{{ post.data.title }}</a></li>
    {% endif %}
  {% endfor %}
</ul>
