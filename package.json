{
	"name": "brisbanesocialchess",
	"version": "1.0.0",
	"private": false,
	"type": "module",
	"scripts": {
		"format": "prettier --config .github/linters/.prettierrc --write \"**/*.{js,json,yaml,yml,css,md}\"",
		"check": "prettier --config .github/linters/.prettierrc --check \"**/*.{js,json,yaml,yml,css,md}\"",
		"lint": "eslint --config .github/linters/eslint.config.mjs .",
		"lint:fix": "eslint --config .github/linters/eslint.config.mjs . --fix",
		"test": "npx lerna run test --stream",
		"dev": "npm run watch",
		"start": "npm run watch",
		"watch": "concurrently \"npm run tailwindcss:watch\" \"npm run vite:watch\" \"npm run 11ty:watch\"",
		"build": "npm run tailwindcss:build && npm run 11ty:build",
		"11ty:watch": "eleventy --serve --input=frontend",
		"11ty:build": "eleventy --input=frontend",
		"tailwindcss:build": "tailwindcss -i frontend/assets/styles/tailwind.css -o frontend/assets/styles/base.css",
		"tailwindcss:watch": "tailwindcss -i frontend/assets/styles/tailwind.css -o frontend/assets/styles/base.css --watch",
		"vite:dev": "vite",
		"vite:build": "npm run tailwindcss:build && vite build && node copy-html.js",
		"vite:watch": "vite watch"
	},
	"workspaces": [
		"packages/*"
	],
	"dependencies": {
		"@tailwindcss/cli": "^4.1.11",
		"glob": "^11.0.3",
		"html-minifier-terser": "^7.2.0",
		"luxon": "^3.7.1",
		"tailwindcss": "^4.1.11"
	},
	"devDependencies": {
		"@11ty/eleventy": "^3.1.2",
		"@cloudflare/vitest-pool-workers": "^0.8.68",
		"@eslint/js": "^9.31.0",
		"@npmcli/arborist": "^9.1.3",
		"concurrently": "^9.2.1",
		"eslint": "^9.31.0",
		"eslint-config-prettier": "^10.1.5",
		"eslint-plugin-prettier": "^5.5.1",
		"globals": "^16.3.0",
		"lerna": "^8.2.3",
		"postcss": "^8.5.6",
		"postcss-import": "^16.1.1",
		"prettier": "^3.6.2",
		"slugify": "^1.6.6"
	},
	"overrides": {
		"devalue": "5.3.2"
	}
}
